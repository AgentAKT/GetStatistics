<Window x:Class="GetStatistics.SSHConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SSH Подключения"
        Height="500"
        Width="600"
        MinWidth="500"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Style="{StaticResource {x:Type Window}}"
        Background="{StaticResource LightBackground}">

    <Window.Resources>
        <Style TargetType="GroupBox" x:Key="ModernGroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Кнопки управления внизу окна -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="btnTestConnection" Content="Проверить" Width="100" Margin="5" Click="TestConnection_Click" Style="{StaticResource ModernButton}"/>
            <Button x:Name="btnConnect" Content="Подключиться" Width="100" Margin="5" Click="Connect_Click" Style="{StaticResource ModernButton}"/>
            <Button x:Name="btnSave" Content="Сохранить" Width="100" Margin="5" Click="Save_Click" Style="{StaticResource ModernButton}"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="100" Margin="5" Click="Cancel_Click" Style="{StaticResource ModernButton}"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Быстрое подключение -->
            <GroupBox Grid.Row="0" Header="Быстрое подключение" Style="{StaticResource ModernGroupBox}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Имя:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtConnectionName" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource ModernTextBox}" Margin="0,0,0,5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Хост:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtHost" Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBox}" Margin="0,0,0,5"/>
                    <Label Grid.Row="1" Grid.Column="2" Content="Порт:" Style="{StaticResource ModernLabel}" Margin="5,0,0,5"/>
                    <TextBox x:Name="txtPort" Grid.Row="1" Grid.Column="3" Style="{StaticResource ModernTextBox}" Width="60" Margin="0,0,0,5" Text="22"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Пользователь:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtUsername" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource ModernTextBox}" Margin="0,0,0,5"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Пароль:" Style="{StaticResource ModernLabel}"/>
                    <PasswordBox x:Name="txtPassword" Grid.Row="3" Grid.Column="1" Style="{StaticResource ModernPasswordBox}" Margin="0,0,0,5"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Путь:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtPath" Grid.Row="4" Grid.Column="1" Style="{StaticResource ModernTextBox}" Margin="0,0,5,0" ToolTip="Путь к логам на сервере"/>
                    <Button x:Name="btnBrowse" Grid.Row="4" Grid.Column="2" Content="..." Width="30" Click="Browse_Click" Style="{StaticResource ModernButton}"/>
                </Grid>
            </GroupBox>

            <!-- Сохраненные подключения -->
            <GroupBox Grid.Row="1" Header="Сохраненные подключения" Style="{StaticResource ModernGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgConnections" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" SelectionChanged="ConnectionSelected">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Хост" Binding="{Binding Host}" Width="*"/>
                            <DataGridTextColumn Header="Пользователь" Binding="{Binding Username}" Width="*"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="btnEdit" Content="✏️" ToolTip="Редактировать" Click="EditConnection_Click" Style="{StaticResource ModernButton}" Margin="2" Padding="5,2"/>
                                            <Button x:Name="btnDelete" Content="🗑️" ToolTip="Удалить" Click="DeleteConnection_Click" Style="{StaticResource ModernButton}" Margin="2" Padding="5,2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                        <Button x:Name="btnAddNew" Content="Добавить новое" Click="AddNew_Click" Style="{StaticResource ModernButton}" Margin="0,0,5,0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>