<Window x:Class="GetStatistics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log Navigator"
        Height="650"
        Width="1300"
        MinWidth="1100"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/log_navigator_logo.png">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE5E5E5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFADADAD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFD5D5D5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF7E7E7E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

        <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

        <Style TargetType="ListBox" x:Key="ListBoxStyle">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        </Style>

        <Style TargetType="DataGrid" x:Key="DataGridStyle">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockStyle">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBoxBorder"
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,5,0"
                                    Background="White"
                                    BorderThickness="1"
                                    BorderBrush="#FFBDC3C7"
                                    CornerRadius="2">
                                <Path x:Name="checkMark"
                                      Width="14"
                                      Height="14"
                                      Stretch="Fill"
                                      Fill="#FF3498DB"
                                      Data="M 1,7 L 5,11 L 13,3"
                                      Stroke="#FF3498DB"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#FF3498DB"/>
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#FFF5F9FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#FF3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Label" x:Key="LabelStyle">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAEAEA"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="12">
            <MenuItem Header="_Файл" Click="MenuItem_Click">
                <Separator/>
            </MenuItem>
            <MenuItem Header="_Настройки" Click="MenuItem_Click">
                <MenuItem Header="_Настройки подключения" Click="OpenServersWindowBtn_Click"/>
            </MenuItem>
            <MenuItem Header="_Справка" Click="MenuItem_Click_1"/>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <!-- Left Panel -->
            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="OpenFolder" Grid.Column="0" Content="📁" Click="OpenFolder_Click" ToolTip="Открыть папку" Style="{StaticResource ButtonStyle}"/>
                        <Button x:Name="SSHConnectionButton" Grid.Column="1" Content="SSH" MinWidth="60" Click="StartSearchInFilesButton_Click" ToolTip="Быстрое подключение по SSH" Style="{StaticResource ButtonStyle}"/>
                    </Grid>
                    <CheckBox x:Name="TodayCheckBox" Grid.Row="1" Content="За текущую дату" Checked="TodayCheckBox_Checked" Unchecked="TodayCheckBox_Unchecked" Style="{StaticResource CheckBoxStyle}"/>
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox x:Name="SearchTextBox" Grid.Row="0" Margin="0,5,5,0" TextChanged="SearchTextBox_TextChanged" Style="{StaticResource TextBoxStyle}"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,5,5">
                            <Button x:Name="StartSearchInFilesButton" Content="Найти" MinWidth="60" Click="StartSearchInFilesButton_Click" ToolTip="Поиск по содержимому всех файлов в папке" Style="{StaticResource ButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                    <ListBox x:Name="LogList" Grid.Row="3" Margin="5" SelectionChanged="LogList_SelectionChanged" Style="{StaticResource ListBoxStyle}"/>
                </Grid>
            </Border>

            <!-- Log Controls Left -->
            <Border Grid.Row="0" Grid.Column="2" Background="LightYellow" BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ComboBox x:Name="StringComboBox_One_Left" Grid.Row="0" Margin="5" SelectionChanged="StringOneComboBox_SelectionChanged" Style="{StaticResource ComboBoxStyle}"/>
                    <ComboBox x:Name="StringComboBox_Two_Left" Grid.Row="1" Margin="5" SelectionChanged="StringTwoComboBox_SelectionChanged" Style="{StaticResource ComboBoxStyle}"/>
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SearchTextBoxLog_One_Left" Grid.Column="0" Margin="0,0,5,0" Height="25" KeyDown="SearchTextBoxLog_One_Left_KeyDown" TextChanged="SearchTextBoxLog_One_Left_TextChanged" Style="{StaticResource TextBoxStyle}"/>
                    </Grid>
                    <Grid Grid.Row="3" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SearchTextBoxLog_Two_Left" Grid.Column="0" Margin="0,0,5,0" Height="25" KeyDown="SearchTextBoxLog_Two_Left_KeyDown" TextChanged="SearchTextBoxLog_Two_Left_TextChanged" Style="{StaticResource TextBoxStyle}"/>
                    </Grid>

                    <Grid Grid.Row="4" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="Unical_Left_CheckBox" Grid.Column="0" Content="Посчитать уникальные" Style="{StaticResource CheckBoxStyle}"/>
                        <Button x:Name="StatisticIn24h_LeftButton" MinWidth="80" Grid.Column="1" Content="Статистика" Width="70" Click="ShowHourlyStatistics_Click" ToolTip="Поиск левому фильтру" Style="{StaticResource ButtonStyle}"/>
                    </Grid>

                    <Grid Grid.Row="5" Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="SearchInFile_LeftButton" Content="Найти" Grid.Column="0" Width="70" Click="StartSearchInFilesButton_Left_Click" ToolTip="Поиск левому фильтру" Style="{StaticResource ButtonStyle}"/>
                        <Button x:Name="ClearButton_Left" Grid.Column="1" Content="Очистить" Click="ClearButton_Left_Click" Width="70" Margin="5,5,5,5" Style="{StaticResource ButtonStyle}"/>
                        <Label x:Name="StringCounter_Left" Grid.Column="2" Content="0" Style="{StaticResource LabelStyle}"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Log Controls Right -->
            <Border Grid.Row="0" Grid.Column="3" Background="LightBlue" BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ComboBox x:Name="StringComboBox_One_Right" Grid.Row="0" Margin="5" SelectionChanged="StringOneComboBox_SelectionChanged" Style="{StaticResource ComboBoxStyle}"/>
                    <ComboBox x:Name="StringComboBox_Two_Right" Grid.Row="1" Margin="5" SelectionChanged="StringTwoComboBox_SelectionChanged" Style="{StaticResource ComboBoxStyle}"/>
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SearchTextBoxLog_One_Right" Grid.Column="0" Margin="0,0,5,0" Height="25" KeyDown="SearchTextBoxLog_One_Right_KeyDown" TextChanged="SearchTextBoxLog_One_Right_TextChanged" Style="{StaticResource TextBoxStyle}"/>
                    </Grid>
                    <Grid Grid.Row="3" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SearchTextBoxLog_Two_Right" Grid.Column="0" Margin="0,0,5,0" Height="25" KeyDown="SearchTextBoxLog_Two_Right_KeyDown" TextChanged="SearchTextBoxLog_Two_Right_TextChanged" Style="{StaticResource TextBoxStyle}"/>
                    </Grid>
                    <CheckBox x:Name="Unical_Right_CheckBox" Grid.Row="4" Content="Посчитать уникальные" Style="{StaticResource CheckBoxStyle}"/>
                    <Grid Grid.Row="5" Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="SearchInFile_RightButton" Content="Найти" Grid.Column="0" Width="70" Click="StartSearchInFilesButton_Right_Click" ToolTip="Поиск правому фильтру" Style="{StaticResource ButtonStyle}"/>
                        <Button x:Name="ClearButton_Right" Grid.Column="1" Content="Очистить" Click="ClearButton_Right_Click" Width="80" Margin="5,5,5,5" Style="{StaticResource ButtonStyle}"/>
                        <Label x:Name="StringCounter_Right" Grid.Column="2" Content="0" Style="{StaticResource LabelStyle}"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Main Log Display -->
            <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1" Margin="0,5,0,0" Padding="5">
                <RichTextBox x:Name="LogRichTextBox" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" IsDocumentEnabled="True" Background="White" BorderThickness="0" FontFamily="Segoe UI" FontSize="14" TextChanged="LogRichTextBox_TextChanged" MouseMove="LogRichTextBox_MouseMove">
                    <RichTextBox.Resources>
                        <Style TargetType="Paragraph">
                            <Setter Property="Margin" Value="0,5,0,5"/>
                        </Style>
                    </RichTextBox.Resources>
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Поработаем!"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Border>

            <!-- Time Calculation Panel -->
            <Border Grid.Row="0" Grid.Column="4" Grid.RowSpan="3" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="StringCounter_Main" Content="0" Style="{StaticResource LabelStyle}"/>
                    <DataGrid x:Name="ResultsDataGrid" Grid.Row="2" Margin="5" AutoGenerateColumns="False" HeadersVisibility="Column" ItemsSource="{Binding LogResults}" Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Фильтры" Binding="{Binding Filters}" Width="*"/>
                            <DataGridTextColumn Header="Всего " Binding="{Binding Counter}" Width="60"/>
                            <DataGridTextColumn Header="Уникальных " Binding="{Binding FullCounter}" Width="80"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <Button Content="⎘" 
                                        FontFamily="Segoe UI Symbol"
                                        ToolTip="Копировать всю таблицу"
                                        Click="CopyAllTableButton_Click"
                                        Padding="1"
                                        FontSize="12"
                                        Background="Transparent"
                                        BorderThickness="0"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="⎘" 
                                            FontFamily="Segoe UI Symbol"
                                            ToolTip="Копировать строку"
                                            Click="CopyRowButton_Click"
                                            Padding="1"
                                            FontSize="16"
                                            Background="Transparent"
                                            BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <StatusBar Grid.Row="4" Grid.ColumnSpan="3" Background="#FFF0F0F0">
                <StatusBarItem>
                    <TextBlock x:Name="StatusText" Text="Готово" FontSize="12"/> 
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </DockPanel>
</Window>
