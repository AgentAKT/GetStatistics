<Window x:Class="GetStatistics.ServersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GetStatistics"
        Title="Настройка подключения" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" Icon="Assets/setting_17146036.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- Дерево серверов с группировкой -->
        <TreeView x:Name="ServersTreeView" Grid.Row="0" Margin="5"
          SelectedItemChanged="ServersTreeView_SelectedItemChanged"
          PreviewMouseLeftButtonDown="TreeView_PreviewMouseLeftButtonDown"
          MouseLeftButtonUp="TreeView_MouseLeftButtonUp" 
          PreviewMouseRightButtonDown="TreeView_PreviewMouseRightButtonDown"
          FontSize="14">
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Дублировать подключение" Click="DuplicateConnection_Click"/>
                    <MenuItem Header="Удалить" Click="RemoveServer_Click"/>
                </ContextMenu>
            </TreeView.ContextMenu>
            
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Servers}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding IconPath}" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <!-- Форма редактирования -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Папка:" Grid.Row="0" Grid.Column="0"/>
            <ComboBox x:Name="FolderComboBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" SelectionChanged="FolderComboBox_SelectionChanged"/>

            <Label Content="Имя:" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" TextChanged="NameTextBox_TextChanged"/>

            <Label Content="Хост:" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="HostTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" TextChanged="HostTextBox_TextChanged"/>

            <Label Content="Протокол:" Grid.Row="3" Grid.Column="0"/>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Занимает всё доступное пространство -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Только для кнопки -->
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ProtocolComboBox" Grid.Column="0" Margin="0,0,0,5" Width="Auto" 
              SelectionChanged="ProtocolComboBox_SelectionChanged">
                    <ComboBoxItem Content="SSH"/>
                    <ComboBoxItem Content="Shared Folder"/>
                    <ComboBoxItem Content="Local"/>
                </ComboBox>
                <Button x:Name="FolderButton" Content="Папка" Click="OpenSharedFolder_Click" 
            Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,5" 
            Width="80" Height="20" Visibility="Collapsed"/>
            </Grid>

            <Label Content="Пользователь:" Grid.Row="4" Grid.Column="0"/>
            <TextBox x:Name="UsernameTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5" TextChanged="UsernameTextBox_TextChanged"/>

            <Label Content="Пароль:" Grid.Row="5" Grid.Column="0"/>
            <PasswordBox x:Name="PasswordBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"
             PreviewMouseLeftButtonDown="PasswordBox_PreviewMouseLeftButtonDown"
             PasswordChanged="PasswordBox_PasswordChanged"/>

            <Label Content="Путь:" Grid.Row="6" Grid.Column="0"/>
            <TextBox x:Name="PathTextBox" Grid.Row="6" Grid.Column="1" Margin="0,0,0,5" TextChanged="PathTextBox_TextChanged"/>

            <Label Content="Порт:" Grid.Row="7" Grid.Column="0"/>
            <TextBox x:Name="PortTextBox" Grid.Row="7" Grid.Column="1" Margin="0,0,0,5" TextChanged="PortTextBox_TextChanged"/>
        <!-- Панель инструментов -->
            <Button Content="Добавить" Click="AddServer_Click" Grid.Row="8" Grid.Column="0" Margin="5,5,0,5" Width="80"/>
        <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="1" Margin="0,5,5,5">
            <Button Content="Удалить" Click="RemoveServer_Click" Margin="0,0,5,0" Width="80"/>
            <Button Content="Новая папка" Click="AddFolder_Click" Margin="0,0,5,0" Width="90"/>
            <Button Content="Сохранить" Click="SaveConfig_Click" Width="80"/>
        </StackPanel>
        </Grid>
    </Grid>
</Window>